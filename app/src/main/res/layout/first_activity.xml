<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:nestedScrollingEnabled="true"
    android:isScrollContainer="false">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bdos_content"
        android:id="@+id/textView"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_below="@+id/textViewZero"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp" />


    <TextView
        android:text="Bridgetown"
        android:textSize="17dp"
        android:textColor="#2B87CE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_toEndOf="@+id/textView2"
        android:layout_marginStart="12dp"
        android:textStyle="normal|bold" />

    <ImageView
        android:id="@+id/bdsImage"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:src="@drawable/beach_4"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="285,543"
        android:textSize="17dp"
        android:textColor="#2B87CE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textStyle="normal|bold"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_toEndOf="@+id/textView4"
        android:layout_marginStart="13dp" />

    <TextView
        android:text="Population:"
        android:textSize="17dp"
        android:textColor="#2B87CE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textStyle="normal|bold"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/textView5"
        android:layout_alignStart="@+id/textView2" />

    <TextView
        android:text="Capital:"
        android:textSize="17dp"
        android:textColor="#2B87CE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textStyle="normal|bold"
        android:layout_marginTop="17dp"
        android:layout_marginStart="16dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewZero"
        android:text="Barbados"
        android:textColor="#2B87CE"
        android:textSize="25dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/bdsImage"
        android:layout_alignParentStart="true"
        android:textStyle="normal|bold" />


</RelativeLayout>